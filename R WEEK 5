TASK 8 
setwd("C:/Users/hp/OneDrive/Desktop/R")
task<-read.csv("india_data.csv")
task$year<-NULL
task$year<-1990:2024
library(ggplot2)
library(gganimate)
library(gifski)
p<-ggplot(data=task)
p<-p+aes(x=year,y=gdp.growth)
p<-p+geom_line(linewidth=4,aes(color=gdp.growth))
p_animate<-p+transition_reveal(year)
animate(p_animate,renderer=gifski_renderer())
